<LinearLayout android:id="@+id/lin2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="15dp"
    android:orientation="vertical"
    android:padding="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <EditText
        android:id="@+id/destination_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:focusable="false"
        android:inputType="textNoSuggestions"
        android:layout_marginLeft="10dp"
        android:drawableRight="@drawable/ic_location_gray"
        android:layout_marginRight="10dp"
        android:background="@drawable/edittxt_bg"
        android:cursorVisible="false"
        android:hint="Destination Location"
        />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/destination_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:drawableRight="@drawable/ic_cal_gray"
            android:background="@drawable/edittxt_bg"
            android:cursorVisible="false"
            android:hint="Date"
            android:inputType="date"
            android:paddingLeft="10dp" />

        <EditText
            android:id="@+id/destination_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:focusable="false"
            android:layout_margin="5dp"
            android:drawableRight="@drawable/ic_clock_gray"
            android:layout_weight="1"
            android:background="@drawable/edittxt_bg"
            android:cursorVisible="false"
            android:hint="Time"
            android:inputType="time"
            android:paddingLeft="10dp" />
    </LinearLayout>

</LinearLayout>